@model LoginVM
@{
    ViewData["Title"] = "Login";
}

<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-sm">
        <h2 class="mt-10 text-center text-2xl font-bold tracking-tight text-amber-900">Sign in to your account</h2>
    </div>

    <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
        <div class="bg-amber-50/95 backdrop-blur-sm px-6 py-8 shadow-xl rounded-lg border border-amber-300">
            <form asp-controller="Account" asp-action="Login" method="post" class="space-y-6">
                @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
                {
                    <div asp-validation-summary="All" class="text-red-700 text-sm bg-red-100 border border-red-300 rounded-md p-3"></div>
                }

                <div>
                    <label asp-for="Username" class="block text-sm font-medium text-amber-900">Username</label>
                    <div class="mt-2">
                        <input asp-for="Username" type="text" required autocomplete="username" class="block w-full rounded-md border border-amber-400 bg-white/90 px-3 py-2 text-gray-900 placeholder:text-gray-500 focus:border-amber-700 focus:outline-none focus:ring-2 focus:ring-amber-700 focus:ring-offset-0 sm:text-sm" />
                        <span asp-validation-for="Username" class="text-red-700 text-xs mt-1"></span>
                    </div>
                </div>

                <div>
                    <div class="flex items-center justify-between">
                        <label asp-for="Password" class="block text-sm font-medium text-amber-900">Password</label>
                    </div>
                    <div class="mt-2">
                        <input asp-for="Password" type="password" required autocomplete="current-password" class="block w-full rounded-md border border-amber-400 bg-white/90 px-3 py-2 text-gray-900 placeholder:text-gray-500 focus:border-amber-700 focus:outline-none focus:ring-2 focus:ring-amber-700 focus:ring-offset-0 sm:text-sm" />
                        <span asp-validation-for="Password" class="text-red-700 text-xs mt-1"></span>
                    </div>
                </div>

                <div class="flex items-center"> 
                    <input asp-for="RememberMe" type="checkbox" class="h-4 w-4 rounded border-amber-400 text-amber-700 focus:ring-amber-700" />
                    <label asp-for="RememberMe" class="ml-2 block text-sm text-amber-900">Remember me</label>
                </div>

                <div>
                    <button type="submit" class="flex w-full justify-center rounded-md bg-amber-700 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-amber-800 focus:outline-none focus:ring-2 focus:ring-amber-700 focus:ring-offset-2 transition-colors">Sign in</button>
                </div>
            </form>
        </div>

        <p class="mt-6 text-center text-sm text-amber-900 font-medium">
            Don't have an account?
            <a asp-controller="Account" asp-action="Register" class="font-semibold text-amber-800 hover:text-orange-700 transition-colors">Register</a>
        </p>
    </div>
</div>