@model RegisterVM
@{
    ViewData["Title"] = "Register";
}

<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-sm">
        <img src="~/recipe-book.png" alt="AppLogo" class="h-10 mx-auto w-auto" />
        <h2 class="mt-10 text-center text-2xl font-bold tracking-tight text-gray-900">Create your account</h2>
    </div>

    <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
        <div class="bg-white px-6 py-8 shadow-md rounded-lg border border-gray-200">
            <form asp-controller="Account" asp-action="Register" method="post" class="space-y-6">
                @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
                {
                    <div asp-validation-summary="All" class="text-red-600 text-sm bg-red-50 border border-red-200 rounded-md p-3"></div>
                }

                <div>
                    <label asp-for="Username" class="block text-sm font-medium text-gray-700">Username</label>
                    <div class="mt-2">
                        <input asp-for="Username" type="text" required autocomplete="username" class="block w-full rounded-md border border-gray-300 px-3 py-2 text-gray-900 placeholder:text-gray-400 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-0 sm:text-sm" />
                        <span asp-validation-for="Username" class="text-red-600 text-xs mt-1"></span>
                    </div>
                </div>

                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-gray-700">Email address</label>
                    <div class="mt-2">
                        <input asp-for="Email" type="email" required autocomplete="email" class="block w-full rounded-md border border-gray-300 px-3 py-2 text-gray-900 placeholder:text-gray-400 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-0 sm:text-sm" />
                        <span asp-validation-for="Email" class="text-red-600 text-xs mt-1"></span>
                    </div>
                </div>

                <div>
                    <label asp-for="Password" class="block text-sm font-medium text-gray-700">Password</label>
                    <div class="mt-2">
                        <input asp-for="Password" type="password" required autocomplete="new-password" class="block w-full rounded-md border border-gray-300 px-3 py-2 text-gray-900 placeholder:text-gray-400 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-0 sm:text-sm" />
                        <span asp-validation-for="Password" class="text-red-600 text-xs mt-1"></span>
                    </div>
                </div>

                <div>
                    <button type="submit" class="flex w-full justify-center rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors">Register</button>
                </div>
            </form>
        </div>

        <p class="mt-6 text-center text-sm text-gray-600">
            Already have an account?
            <a asp-controller="Account" asp-action="Login" class="font-semibold text-blue-600 hover:text-blue-700 transition-colors">Sign in</a>
        </p>
    </div>
    

</div>