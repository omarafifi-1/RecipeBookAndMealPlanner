@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section with Animated Background -->
<div class="relative overflow-hidden">
    <!-- Animated Floating Food Icons Background -->
    <div class="absolute inset-0 opacity-10 pointer-events-none">
    
        <div class="floating-icon" style="top: 20%; left: 80%; animation-delay: 2s;">🥗</div>
        <div class="floating-icon" style="top: 60%; left: 15%; animation-delay: 4s;">🍕</div>
        <div class="floating-icon" style="top: 70%; left: 85%; animation-delay: 1s;">🥘</div>
        <div class="floating-icon" style="top: 40%; left: 50%; animation-delay: 3s;">🍰</div>
        <div class="floating-icon" style="top: 85%; left: 40%; animation-delay: 5s;">🥖</div>
    </div>

    <!-- Main Hero Content -->
    <div class="container mx-auto px-4 py-20 lg:py-32 relative z-10">
        <div class="max-w-6xl mx-auto">
            <div class="grid lg:grid-cols-2 gap-12 items-center">
                <!-- Left Column: Text Content -->
                <div class="text-center lg:text-left space-y-6 animate-fade-in">
                    <div class="inline-block">
                        <span class="bg-amber-200 text-amber-900 px-4 py-2 rounded-full text-sm font-semibold">
                            ✨ Your Personal Kitchen Assistant
                        </span>
                    </div>
                    
                    <h1 class="text-5xl lg:text-7xl font-black text-amber-900 leading-tight">
                        Cook Smarter,
                        <span class="text-transparent bg-clip-text bg-gradient-to-r from-orange-600 to-amber-700">
                            Eat Better
                        </span>
                    </h1>
                    
                    <p class="text-xl lg:text-2xl text-amber-800 leading-relaxed">
                        Transform your cooking routine with our all-in-one recipe manager and meal planner. 
                        <strong>No more "What's for dinner?"</strong> stress.
                    </p>

                    <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start pt-4">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a asp-controller="Recipe" asp-action="Index" 
                               class="group px-8 py-4 bg-gradient-to-r from-amber-700 to-orange-700 text-white text-lg font-bold rounded-xl shadow-2xl hover:shadow-amber-500/50 transform hover:-translate-y-1 transition-all duration-300">
                                <span class="flex items-center justify-center">
                                    My Recipes
                                    <svg class="w-5 h-5 ml-2 group-hover:translate-x-2 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                                    </svg>
                                </span>
                            </a>
                            <a asp-controller="Planner" asp-action="Index" 
                               class="px-8 py-4 bg-white border-3 border-amber-700 text-amber-700 text-lg font-bold rounded-xl shadow-lg hover:bg-amber-50 transform hover:-translate-y-1 transition-all duration-300">
                                Plan My Week
                            </a>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Register" 
                               class="group px-8 py-4 bg-gradient-to-r from-amber-700 to-orange-700 text-white text-lg font-bold rounded-xl shadow-2xl hover:shadow-amber-500/50 transform hover:-translate-y-1 transition-all duration-300">
                                <span class="flex items-center justify-center">
                                    Start Free Today
                                    <svg class="w-5 h-5 ml-2 group-hover:translate-x-2 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                                    </svg>
                                </span>
                            </a>
                            <a asp-controller="Account" asp-action="Login" 
                               class="px-8 py-4 bg-white border-3 border-amber-700 text-amber-700 text-lg font-bold rounded-xl shadow-lg hover:bg-amber-50 transform hover:-translate-y-1 transition-all duration-300">
                                Sign In
                            </a>
                        }
                    </div>

                    <!-- Stats -->
                    <div class="flex gap-8 justify-center lg:justify-start pt-8 border-t border-amber-300">
                        <div class="text-center">
                            <div class="text-3xl font-black text-amber-900">100%</div>
                            <div class="text-sm text-amber-700">Free</div>
                        </div>
                        <div class="text-center">
                            <div class="text-3xl font-black text-amber-900">∞</div>
                            <div class="text-sm text-amber-700">Recipes</div>
                        </div>
                        <div class="text-center">
                            <div class="text-3xl font-black text-amber-900">1-Click</div>
                            <div class="text-sm text-amber-700">Shopping List</div>
                        </div>
                    </div>
                </div>

                <!-- Right Column: Interactive Visual -->
                <div class="relative animate-fade-in-delay">
                    <div class="relative">
                        <!-- Main Card -->
                        <div class="bg-white/90 backdrop-blur-sm rounded-3xl shadow-2xl p-8 border-4 border-amber-200 transform rotate-2 hover:rotate-0 transition-transform duration-300">
                            <div class="space-y-6">
                                <div class="flex items-center justify-between">
                                    <h3 class="text-2xl font-bold text-amber-900">This Week's Plan</h3>
                                    <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm font-semibold">Ready!</span>
                                </div>
                                
                                <div class="space-y-3">
                                    <div class="bg-amber-50 p-4 rounded-xl border-2 border-amber-200">
                                        <div class="flex items-center gap-3">
                                            <div class="text-3xl">🌅</div>
                                            <div class="flex-1">
                                                <div class="font-semibold text-amber-900">Monday Breakfast</div>
                                                <div class="text-sm text-amber-700">Avocado Toast & Coffee</div>
                                            </div>
                                            <div class="text-amber-600">✓</div>
                                        </div>
                                    </div>
                                    
                                    <div class="bg-amber-50 p-4 rounded-xl border-2 border-amber-200">
                                        <div class="flex items-center gap-3">
                                            <div class="text-3xl">🌞</div>
                                            <div class="flex-1">
                                                <div class="font-semibold text-amber-900">Monday Lunch</div>
                                                <div class="text-sm text-amber-700">Caesar Salad Bowl</div>
                                            </div>
                                            <div class="text-amber-600">✓</div>
                                        </div>
                                    </div>
                                    
                                    <div class="bg-amber-50 p-4 rounded-xl border-2 border-amber-200">
                                        <div class="flex items-center gap-3">
                                            <div class="text-3xl">🌙</div>
                                            <div class="flex-1">
                                                <div class="font-semibold text-amber-900">Monday Dinner</div>
                                                <div class="text-sm text-amber-700">Spaghetti Carbonara</div>
                                            </div>
                                            <div class="text-amber-600">✓</div>
                                        </div>
                                    </div>
                                </div>

                                <button class="w-full bg-gradient-to-r from-amber-600 to-orange-600 text-white font-bold py-3 rounded-xl hover:shadow-lg transition-all">
                                    View Full Week →
                                </button>
                            </div>
                        </div>

                        <!-- Floating Shopping List Card -->
                        <div class="absolute -bottom-8 -left-8 bg-white rounded-2xl shadow-xl p-4 border-2 border-amber-300 transform -rotate-6 hover:rotate-0 transition-transform duration-300 max-w-[200px]">
                            <div class="text-sm font-bold text-amber-900 mb-2">🛒 Shopping List</div>
                            <div class="space-y-1 text-xs text-amber-700">
                                <div>✓ 2 Avocados</div>
                                <div>✓ 1 lb Pasta</div>
                                <div>✓ 6 Eggs</div>
                                <div class="text-green-600 font-semibold">+12 more items</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Features Section with Cards -->
<div class="py-20 bg-gradient-to-b from-transparent to-amber-100/50">
    <div class="container mx-auto px-4">
        <div class="text-center mb-16">
            <h2 class="text-4xl lg:text-5xl font-black text-amber-900 mb-4">
                Everything You Need in One Place
            </h2>
            <p class="text-xl text-amber-700 max-w-2xl mx-auto">
                Stop juggling apps. Start cooking with confidence.
            </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
            <!-- Feature 1 -->
            <div class="group bg-white/90 backdrop-blur-sm rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 border-2 border-amber-200">
                <div class="bg-gradient-to-br from-amber-400 to-orange-500 w-16 h-16 rounded-2xl flex items-center justify-center mb-6 transform group-hover:scale-110 group-hover:rotate-6 transition-all">
                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                    </svg>
                </div>
                <h3 class="text-2xl font-bold text-amber-900 mb-3">Digital Recipe Book</h3>
                <p class="text-amber-700 leading-relaxed">
                    Keep all your favorite recipes organized in one beautiful, searchable collection. Add photos, notes, and cooking times.
                </p>
            </div>

            <!-- Feature 2 -->
            <div class="group bg-white/90 backdrop-blur-sm rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 border-2 border-amber-200">
                <div class="bg-gradient-to-br from-green-400 to-emerald-500 w-16 h-16 rounded-2xl flex items-center justify-center mb-6 transform group-hover:scale-110 group-hover:rotate-6 transition-all">
                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                </div>
                <h3 class="text-2xl font-bold text-amber-900 mb-3">Weekly Meal Planner</h3>
                <p class="text-amber-700 leading-relaxed">
                    Drag-and-drop your recipes into a weekly calendar. Plan breakfast, lunch, and dinner for the whole family with ease.
                </p>
            </div>

            <!-- Feature 3 -->
            <div class="group bg-white/90 backdrop-blur-sm rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 border-2 border-amber-200">
                <div class="bg-gradient-to-br from-purple-400 to-pink-500 w-16 h-16 rounded-2xl flex items-center justify-center mb-6 transform group-hover:scale-110 group-hover:rotate-6 transition-all">
                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
                    </svg>
                </div>
                <h3 class="text-2xl font-bold text-amber-900 mb-3">Smart Shopping List</h3>
                <p class="text-amber-700 leading-relaxed">
                    Automatically generate a consolidated shopping list from your meal plan. Never forget ingredients again!
                </p>
            </div>
        </div>
    </div>
</div>

