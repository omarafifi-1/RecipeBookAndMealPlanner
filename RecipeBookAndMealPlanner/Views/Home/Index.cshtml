@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<div class="bg-gradient-to-r from-amber-100 via-orange-100 to-amber-100 py-20">
    <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
            <div class="flex justify-center mb-6">
                <img src="~/recipe-book.png" alt="Recipe Book Logo" class="h-16 w-auto" />
            </div>
            <h1 class="text-5xl font-bold text-amber-900 mb-6">Your Personal Recipe Book & Meal Planner</h1>
            <p class="text-xl text-amber-800 mb-8">Save your favorite recipes, plan your weekly meals, and automatically generate shopping lists—all in one place.</p>
            <div class="flex gap-4 justify-center flex-wrap">
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-controller="Recipe" asp-action="Index" class="px-8 py-3 bg-amber-700 text-white font-semibold rounded-lg shadow-md hover:bg-amber-800 transition-colors">
                        View My Recipes
                    </a>
                    <a asp-controller="MealPlan" asp-action="Index" class="px-8 py-3 bg-white text-amber-700 font-semibold rounded-lg shadow-md hover:bg-amber-50 border-2 border-amber-700 transition-colors">
                        Plan Meals
                    </a>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Register" class="px-8 py-3 bg-amber-700 text-white font-semibold rounded-lg shadow-md hover:bg-amber-800 transition-colors">
                        Get Started Free
                    </a>
                    <a asp-controller="Account" asp-action="Login" class="px-8 py-3 bg-white text-amber-700 font-semibold rounded-lg shadow-md hover:bg-amber-50 border-2 border-amber-700 transition-colors">
                        Sign In
                    </a>
                }
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="py-16 bg-white">
    <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center text-amber-900 mb-12">Everything You Need to Plan Your Meals</h2>
        
        <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
            <!-- Feature 1 -->
            <div class="text-center p-6 rounded-lg hover:shadow-lg transition-shadow border border-amber-100">
                <div class="bg-amber-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                    <svg class="w-8 h-8 text-amber-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                    </svg>
                </div>
                <h3 class="text-xl font-semibold text-amber-900 mb-2">Save Your Recipes</h3>
                <p class="text-amber-700">Create and organize your personal recipe collection. Add images, ingredients, and instructions all in one place.</p>
            </div>

            <!-- Feature 2 -->
            <div class="text-center p-6 rounded-lg hover:shadow-lg transition-shadow border border-amber-100">
                <div class="bg-orange-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                    <svg class="w-8 h-8 text-orange-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                </div>
                <h3 class="text-xl font-semibold text-amber-900 mb-2">Plan Your Week</h3>
                <p class="text-amber-700">Drag and drop recipes into a weekly calendar view. Plan breakfast, lunch, and dinner for the entire week.</p>
            </div>

            <!-- Feature 3 -->
            <div class="text-center p-6 rounded-lg hover:shadow-lg transition-shadow border border-amber-100">
                <div class="bg-yellow-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                    <svg class="w-8 h-8 text-yellow-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
                    </svg>
                </div>
                <h3 class="text-xl font-semibold text-amber-900 mb-2">Auto Shopping List</h3>
                <p class="text-amber-700">Generate a consolidated shopping list from your meal plan. All ingredients automatically calculated and organized.</p>
            </div>
        </div>
    </div>
</div>

<!-- How It Works Section -->
<div class="py-16 bg-amber-50">
    <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center text-amber-900 mb-12">How It Works</h2>
        
        <div class="max-w-4xl mx-auto space-y-8">
            <!-- Step 1 -->
            <div class="flex gap-6 items-start">
                <div class="flex-shrink-0 w-12 h-12 bg-amber-700 text-white rounded-full flex items-center justify-center font-bold text-xl">
                    1
                </div>
                <div>
                    <h3 class="text-xl font-semibold text-amber-900 mb-2">Create Your Recipe Collection</h3>
                    <p class="text-amber-700">Add your favorite recipes with titles, descriptions, images, and detailed ingredient lists. Categorize them for easy access.</p>
                </div>
            </div>

            <!-- Step 2 -->
            <div class="flex gap-6 items-start">
                <div class="flex-shrink-0 w-12 h-12 bg-amber-700 text-white rounded-full flex items-center justify-center font-bold text-xl">
                    2
                </div>
                <div>
                    <h3 class="text-xl font-semibold text-amber-900 mb-2">Build Your Weekly Meal Plan</h3>
                    <p class="text-amber-700">Use the calendar view to assign recipes to specific days and meals. Plan ahead and stay organized throughout the week.</p>
                </div>
            </div>

            <!-- Step 3 -->
            <div class="flex gap-6 items-start">
                <div class="flex-shrink-0 w-12 h-12 bg-amber-700 text-white rounded-full flex items-center justify-center font-bold text-xl">
                    3
                </div>
                <div>
                    <h3 class="text-xl font-semibold text-amber-900 mb-2">Generate Your Shopping List</h3>
                    <p class="text-amber-700">Click one button and get a complete shopping list with all ingredients combined and quantities calculated automatically.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- CTA Section -->
<div class="py-16 bg-gradient-to-r from-amber-700 to-orange-700">
    <div class="container mx-auto px-4 text-center">
        <h2 class="text-3xl font-bold text-white mb-4">Ready to Get Started?</h2>
        <p class="text-xl text-amber-100 mb-8">Join today and take control of your meal planning.</p>
        @if (!User.Identity.IsAuthenticated)
        {
            <a asp-controller="Account" asp-action="Register" class="inline-block px-8 py-3 bg-white text-amber-700 font-semibold rounded-lg shadow-md hover:bg-amber-50 transition-colors">
                Create Free Account
            </a>
        }
        else
        {
            <a asp-controller="Recipes" asp-action="Create" class="inline-block px-8 py-3 bg-white text-amber-700 font-semibold rounded-lg shadow-md hover:bg-amber-50 transition-colors">
                Add Your First Recipe
            </a>
        }
    </div>
</div>