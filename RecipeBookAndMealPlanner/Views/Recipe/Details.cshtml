@model Recipe
@{
    ViewData["Title"] = Model.Title;
}

<div class="container mx-auto px-4 py-8 max-w-5xl">
    <!-- Header Section -->
    <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-8">
        <div>
            <h1 class="text-4xl font-bold text-amber-900 mb-2">@Model.Title</h1>
            <p class="text-amber-700">Recipe details and ingredients</p>
        </div>
        <div class="flex gap-3 mt-4 md:mt-0">
            <a asp-action="Edit" asp-route-id="@Model.Id" 
               class="inline-flex items-center px-4 py-2 bg-amber-700 text-white text-sm font-semibold rounded-md shadow-sm hover:bg-amber-800 focus:outline-none focus:ring-2 focus:ring-amber-700 focus:ring-offset-2 transition-colors">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
                Edit
            </a>
            <a asp-action="Index" 
               class="inline-flex items-center px-4 py-2 bg-white border-2 border-amber-700 text-amber-700 text-sm font-semibold rounded-md shadow-sm hover:bg-amber-50 focus:outline-none focus:ring-2 focus:ring-amber-700 focus:ring-offset-2 transition-colors">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                </svg>
                Back to Recipes
            </a>
        </div>
    </div>

    <div class="grid md:grid-cols-3 gap-6">
        <!-- Ingredients Section (Left Column) -->
        <div class="md:col-span-1">
            <div class="bg-amber-50/95 backdrop-blur-sm rounded-lg shadow-xl border border-amber-300 p-6 sticky top-6">
                <div class="flex items-center mb-4">
                    <svg class="w-6 h-6 text-amber-700 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                    </svg>
                    <h2 class="text-2xl font-bold text-amber-900">Ingredients</h2>
                </div>

                @if (Model.RecipeIngredients != null && Model.RecipeIngredients.Any())
                {
                    <ul class="space-y-3">
                        @foreach (var ri in Model.RecipeIngredients)
                        {
                            <li class="flex items-start">
                                <span class="inline-block w-2 h-2 bg-amber-600 rounded-full mt-2 mr-3 flex-shrink-0"></span>
                                <span class="text-amber-800">
                                    <strong class="font-semibold">@ri.Quantity @ri.Unit</strong> @ri.Ingredient.Name
                                </span>
                            </li>
                        }
                    </ul>

                    <!-- Shopping List Button -->
                    <div class="mt-6 pt-6 border-t border-amber-300">
                        <button type="button" 
                                class="w-full flex items-center justify-center px-4 py-2 bg-amber-600 text-white text-sm font-semibold rounded-md hover:bg-amber-700 transition-colors">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
                            </svg>
                            Add to Shopping List
                        </button>
                    </div>
                }
                else
                {
                    <p class="text-amber-700 text-sm italic">No ingredients listed for this recipe.</p>
                }
            </div>
        </div>

        <!-- Instructions Section (Right Column) -->
        <div class="md:col-span-2">
            <div class="bg-amber-50/95 backdrop-blur-sm rounded-lg shadow-xl border border-amber-300 p-8">
                <div class="flex items-center mb-6">
                    <svg class="w-6 h-6 text-amber-700 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                    </svg>
                    <h2 class="text-2xl font-bold text-amber-900">Instructions</h2>
                </div>

                @if (!string.IsNullOrWhiteSpace(Model.Instructions))
                {
                    <div class="prose prose-amber max-w-none">
                        <div class="text-amber-800 leading-relaxed whitespace-pre-line">
                            @Model.Instructions
                        </div>
                    </div>
                }
                else
                {
                    <p class="text-amber-700 text-sm italic">No instructions provided for this recipe.</p>
                }

                <!-- Recipe Meta Information -->
                <div class="mt-8 pt-6 border-t border-amber-300">
                    <div class="flex flex-wrap gap-4 text-sm text-amber-700">
                        <div class="flex items-center">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            <span><strong>@(Model.RecipeIngredients?.Count ?? 0)</strong> ingredients</span>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="mt-8 flex gap-3">
                    <button type="button" 
                            onclick="window.print()" 
                            class="flex-1 flex items-center justify-center px-4 py-3 bg-white border-2 border-amber-700 text-amber-700 text-sm font-semibold rounded-md hover:bg-amber-50 transition-colors">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"/>
                        </svg>
                        Print Recipe
                    </button>
                    
                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="flex-1" onsubmit="return confirm('Are you sure you want to delete this recipe?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" 
                                class="w-full flex items-center justify-center px-4 py-3 bg-red-600 text-white text-sm font-semibold rounded-md hover:bg-red-700 transition-colors">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                            </svg>
                            Delete Recipe
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
